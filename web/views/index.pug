extends ./layout.pug

block title
	title #{title}

block content
	header
		h1 Home
		p Router와 AP의 세트를 확인할 수 있는 화면입니다.	
		hr
	body
		// Top header
		header.w3-container.w3-xlarge
		table#example.display(cellspacing='0', width='100%')
			thead
				tr
					th Router
					th AP1
					th AP2
					th AP3
					th AP4
					th AP5
			tfoot
				tr
					th Router
					th AP1
					th AP2
					th AP3
					th AP4
					th AP5
			tbody
				- for (device in devices)
					tr
						td
							a(href='/router/' + devices[device].mac) #{devices[device].mac}
						- for (i in devices[device].ap)
							- if ('None' == devices[device].ap[i])
								td None
								
							- else
								td #{devices[device].ap[i]['ssid']}
									div 
										a(href='/ap/' + devices[device].ap[i]['mac']) #{devices[device].ap[i]['mac']}
